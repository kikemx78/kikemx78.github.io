.card
  position relative
  max-width 230px
  max-height 295px
  min-width 230px
  min-height 295px
  background #fff
  margin 2.5em 0 0 0 
  border-radius 2px
  color dark-text
  box-shadow shadow1
  cursor pointer

  .layer
    position absolute
    max-width 230px
    max-height 245px
    min-width 230px
    min-height 245px
    transition all .2s ease-in-out;
    z-index 3

    .type-text
      position absolute
      color #fff
      text-align center
      opacity 0
      width 100%
      bottom 0
         
  &:active
    transform scale(0.8)

  &:hover
    box-shadow shadow2
    transform scale(0.95)
    background-color rgba(0, 0, 0, 0.75)
    color light-text

    .layer
      background-repeat no-repeat
      background-position 50% 50%
      background-color rgba(0, 0, 0, 0.75)
      
      &.artist
        background-image url(../img/artist-icon@2x.png)
        
      &.album
        background-image url(../img/Bitmap@2x.png)
        background-size 50%
      
      .type-text
        opacity 1

  .card-img-cont
    position relative
    width 100%
    height 245px      
    .card-img
      max-width 230px
      max-height 245px
      min-width 230px
      min-height 245px
   
     
  .footer
    width 90%
    padding 1em
    height 25px
    font-size 0.8em
    white-space nowrap
    text-overflow ellipsis
    overflow hidden